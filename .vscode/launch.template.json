{
	"version": "0.2.0",
	"configurations": [
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Mocha Tests (currently opened test)",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "${command:extension.commandvariable.file.filePosix}"
      ],
      "env": {
        "NODE_ENV": "testing"
      },
      "sourceMaps": true,
      "smartStep": true,
      "console": "integratedTerminal",
    }
	]
}
